<resources>

    <!-- Base application theme. -->
    <style name="WeatherAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="WeatherAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WeatherAppTheme.ActionButton">
        <item name="android:background">@drawable/shape_round_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/text_spacing_16</item>
        <item name="android:paddingRight">@dimen/text_spacing_16</item>
        <item name="android:minWidth">@dimen/button_min_width_64</item>
    </style>

    <style name="WeatherAppTheme.EditText">
        <item name="android:background">@drawable/shape_round_white_bordered</item>
        <item name="android:paddingBottom">@dimen/spacing_16</item>
        <item name="android:paddingTop">@dimen/spacing_16</item>
        <item name="android:paddingLeft">@dimen/text_spacing_14</item>
        <item name="android:paddingRight">@dimen/text_spacing_14</item>
    </style>

</resources>
